<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mobile20171c.utnapp.CursoFragment"
    android:orientation="vertical"
    android:layout_margin="20dp">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Materia"
        style="@style/AppThemeFormLabel"
        />

    <Spinner
        android:id="@+id/nuevoCursoMateria"
        style="@style/AppTheme.FormElement"></Spinner>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Codigo"
        style="@style/AppThemeFormLabel"
        />

    <EditText
        style="@style/AppTheme.FormElement" android:id="@+id/nuevoCursoCodigo"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Profesor"
        style="@style/AppThemeFormLabel"
        />

    <EditText
        style="@style/AppTheme.FormElement" android:id="@+id/nuevoCursoProfesor" />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Sede"
        style="@style/AppThemeFormLabel"
        />

    <Spinner
        android:entries="@array/sedes"
        style="@style/AppTheme.FormElement" android:id="@+id/nuevoCursoSede"></Spinner>

    <!--Datos de contacto del profesor-->

    <!--Horario-->

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Aula"
        style="@style/AppThemeFormLabel"
        />

    <EditText
        style="@style/AppTheme.FormElement" android:id="@+id/nuevoCursoAula" />

    <Button
        android:id="@+id/buttonCrearCurso"
        android:layout_height="wrap_content"
        android:text="Crear Curso"
        android:onClick="crearCurso"
        android:layout_width="fill_parent">
    </Button>

</LinearLayout>

</ScrollView>
